<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_vr_trainee_form" model="ir.ui.view">
            <field name="name">vr.trainee.form</field>
            <field name="model">vr.trainee</field>
            <field name="arch" type="xml">
                <form string="Trainee">
                    <header>
                        <button name="action_view_game_result" type="object" string="View Training Sessions" class="oe_highlight" attrs="{'invisible':[('game_sessions_count', '=', 0)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_game_result" type="object" class="oe_stat_button" icon="fa-tasks" attrs="{'invisible':[('game_sessions_count', '=', 0)]}">
                                <field string="Training Sessions" name="game_sessions_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title" groups="virsat.group_view_vr_trainee_name">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pin" readonly="1"/>
                                <field name="unit"/>
                                <field name="designation"/>
                                <field name="gender"/>
                                <field name="dob"/>
                            </group>
                            <group>
                                <field name="company_id" options="{'no_create_edit': True, 'no_open': True}" groups="base.group_multi_company"/>
                                <field name="driver_for"/>
                                <field name="location"/>
                                <field name="language"/>
                                <field name="nationality"/>
                            </group>
                        </group>

                        <field name="active" invisible="1"/>
                        <field name="game_sessions_count" invisible="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vr_trainee_tree" model="ir.ui.view">
            <field name="name">vr.trainee.tree</field>
            <field name="model">vr.trainee</field>
            <field name="arch" type="xml">
                <tree string="Trainee" import="false">
                    <field name="pin"/>
                    <field name="name" groups="virsat.group_view_vr_trainee_name"/>
                    <field name="unit"/>
                    <field name="designation"/>
                    <!--<field name="gender"/>
                    <field name="dob"/>-->
                    <!--<field name="driver_for"/>-->
                    <field name="location" optional="show"/>
                    <field name="language" optional="show"/>
                    <!--<field name="nationality" optional="show"/>-->
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="action_vr_trainee" model="ir.actions.act_window">
            <field name="name">Trainee</field>
            <field name="res_model">vr.trainee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_vr_reserved_pin_tree" model="ir.ui.view">
            <field name="name">view.vr.reserved.pin.tree</field>
            <field name="model">vr.reserved.pin</field>
            <field name="arch" type="xml">
                <tree string="Reserved PIN" import="false">
                    <field name="pin"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="action_vr_reserved_pin" model="ir.actions.act_window">
            <field name="name">VR Reserved PIN</field>
            <field name="res_model">vr.reserved.pin</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>